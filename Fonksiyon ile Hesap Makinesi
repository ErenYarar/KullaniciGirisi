######################### Fonksiyon ile Hesap Makinesi ###########################


def toplama(x,y):
    return x + y

def fark(x,y):
    return x - y

def carpma(x,y):
    return x * y

def bolme(x,y):
    return x / y


print("Toplama: {}".format(toplama(7,3)))
print("Fark: {}".format(fark(30,5)))
print("Carpma: {}".format(carpma(6,5)))
print("Bolme: {}".format(bolme(12,6)))



